# Application
APP_NAME=Spectracle
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost

# Database
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=spectracle_db
DB_USERNAME=postgres
DB_PASSWORD=

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=REDIS_PASSWORD
REDIS_PORT=6379

# Cache
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Docker Configuration
COMPOSE_PROJECT_NAME=spectracle

# PostgreSQL
POSTGRES_DB=spectracle_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=strongpassword123

# Container Names
CONTAINER_APP=spectracle-app
CONTAINER_NGINX=spectracle-nginx
CONTAINER_POSTGRES=spectracle-postgres
CONTAINER_REDIS=spectracle-redis

# Ports
HTTP_PORT=80
HTTPS_PORT=443
POSTGRES_PORT=5432
REDIS_PORT=6379

# Network
NETWORK_NAME=spectracle-network

# Volumes
VOLUME_POSTGRES=postgres_data
VOLUME_REDIS=redis_data
VOLUME_APP=app_data
VOLUME_APP_LOGS=app_logs
VOLUME_NGINX_LOGS=nginx_logs

# Docker Build
DOCKERFILE_PHP=docker/php/Dockerfile
DOCKERFILE_NGINX=docker/nginx/Dockerfile
BUILD_TARGET=production
